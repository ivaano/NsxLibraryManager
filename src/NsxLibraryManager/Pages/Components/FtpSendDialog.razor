@page "/FtpSendDialog"

<RadzenStack>
    <RadzenRow>
        <RadzenText TextStyle="TextStyle.Caption">Upload selected base title(s) with all related dlc and just the latest patch to an anonymous FTP server</RadzenText>
    </RadzenRow>
    <RadzenRow>
        <RadzenColumn Size="12" SizeMD="2" Style="float: none; text-align: right">
            <RadzenLabel Component="Protocol" style="width: 100%" Text="Protocol:"></RadzenLabel>
        </RadzenColumn>
        <RadzenColumn Size="12" SizeMD="10">
            <RadzenTextBox style="display: block; width: 100%" Name="Protocol" Value="FTP - File Transfer Protocol" ReadOnly="true" Disabled="true"></RadzenTextBox>
            <RadzenRequiredValidator Component="Protocol" style="position: absolute"></RadzenRequiredValidator>
        </RadzenColumn>
    </RadzenRow>
    <RadzenRow>
        <RadzenColumn Size="2" Style="text-align: right">
            <RadzenLabel Component="Host" style="width: 100%" Text="Host:"></RadzenLabel>
        </RadzenColumn>
        <RadzenColumn Size="7">
            <RadzenTextBox @bind-Value="_ftpClientSettings.Host" style="display: block; width: 100%" Name="Host"/>
            <RadzenRequiredValidator Component="Host" style="position: absolute"></RadzenRequiredValidator>
        </RadzenColumn>
        <RadzenColumn Size="1" Style="text-align: right">
            <RadzenLabel Component="Port" style="width: 100%" Text="Port:"></RadzenLabel>
        </RadzenColumn>
        <RadzenColumn Size="2">
            <RadzenNumeric @bind-Value="_ftpClientSettings.Port" style="display: block; width: 100%" Name="Port"/>
            <RadzenRequiredValidator Component="Port" style="position: absolute"></RadzenRequiredValidator>
        </RadzenColumn>
    </RadzenRow>
    <RadzenRow>
        <RadzenColumn Size="12" SizeMD="2" Style="float: none; text-align: right">
            <RadzenLabel Component="LogonType" style="width: 100%" Text="Logon Type:"></RadzenLabel>
        </RadzenColumn>
        <RadzenColumn Size="12" SizeMD="10">
            <RadzenTextBox style="display: block; width: 100%" Name="LogonType" Value="Anonymous" ReadOnly="true" Disabled="true"></RadzenTextBox>
            <RadzenRequiredValidator Component="LogonType" style="position: absolute"></RadzenRequiredValidator>
        </RadzenColumn>
    </RadzenRow>
    <RadzenRow>
        <RadzenColumn Size="12" SizeMD="2" Style="float: none; text-align: right">
            <RadzenLabel Component="RemotePath" style="width: 100%" Text="Path:"></RadzenLabel>
        </RadzenColumn>
        <RadzenColumn Size="12" SizeMD="10">
            <RadzenTextBox @bind-Value="_ftpClientSettings.RemotePath" style="display: block; width: 100%" Name="RemotePath"/>
            <RadzenRequiredValidator Component="RemotePath" style="position: absolute"></RadzenRequiredValidator>
        </RadzenColumn>
    </RadzenRow>
    <RadzenStack Orientation="Orientation.Horizontal" JustifyContent="JustifyContent.Center" Gap="1rem" class="rz-mt-8 rz-mb-4">
        <RadzenButton ButtonType="ButtonType.Submit" Size="ButtonSize.Large" Icon="save" Text="Send" Click="@(args => OnSubmit())" Disabled="@_disableButtons"/>
        <RadzenButton ButtonStyle="ButtonStyle.Light" Variant="Variant.Flat" Size="ButtonSize.Large" Icon="cancel" Text="Cancel" Click="@Cancel" Disabled="@_disableButtons"/>
    </RadzenStack>
</RadzenStack>


