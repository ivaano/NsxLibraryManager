<RadzenRow Style="padding-top: 10px; padding-bottom: 3px">
    <RadzenColumn Size="5">
        <RadzenText Text="@(LibraryTitleDto?.Intro)" TextStyle="TextStyle.H6"/>
        
        <div class="text-container">
            <p @ref="textRef" class="text-content" style="max-height: @MaxHeight;" @onclick="ToggleText">
                @((MarkupString)TextToDisplay)
            </p>
            <RadzenButton Click=@(args => ToggleText()) Icon=@(IsExpanded ? "remove" : "add") Text=@(IsExpanded ? "Read Less" : "Read More") ButtonStyle="ButtonStyle.Primary" Variant="Variant.Text"/>

        </div>
    </RadzenColumn>
    <RadzenColumn Size="7">

        <RadzenCarousel @ref="_carousel" @bind-SelectedIndex="@_selectedIndex" Auto="@_auto" Interval="@_interval"
                        PagerOverlay="true" ButtonShade="Shade.Default" Style="height: 366px;" class="rz-mx-auto">
            <Items>
                @if (LibraryTitleDto?.Screenshots is not null)
                {
                    @foreach (var screenshot in LibraryTitleDto?.Screenshots)
                    {
                        <RadzenCarouselItem>
                                <RadzenImage Path="@screenshot.Url" class="rz-h-100"/>
                        </RadzenCarouselItem>
                    }
                }
            </Items>
        </RadzenCarousel>
        
        
    </RadzenColumn>
</RadzenRow>
<RadzenRow>
    <RadzenTabs TabPosition="@TabPosition.Top" RenderMode="TabRenderMode.Client" >
        <Tabs>
            <RadzenTabsItem Text="DLC">
                <RadzenDataGrid style="height: 50vh" @ref="_dlcGrid" IsLoading="@_dlcIsLoading" Count="@_dlcCount"
                                Data="@_dlcs" LoadData="@LoadDlcData" AllowSorting="true" AllowColumnResize="true"
                                AllowFiltering="true" FilterMode="FilterMode.CheckBoxList" AllowPaging="true" PageSize="100"
                                ShowPagingSummary="true">
                    <Columns>
                        <RadzenDataGridColumn Property="ApplicationId" Filterable="true" Title="ID" Width="60px" TextAlign="TextAlign.Center" FilterMode="FilterMode.Advanced"/>
                        <RadzenDataGridColumn Property="TitleName" Filterable="false" Title="Name" Width="120px" TextAlign="TextAlign.Left">
                            <Template Context="dlc">
                                <div style="white-space: normal; word-break: break-word; min-width: 0; max-height: 100px; overflow-y: auto;">
                                    @dlc.TitleName
                                </div>
                            </Template>
                        </RadzenDataGridColumn>
                        <RadzenDataGridColumn Property="FileName" Filterable="false" Title="Name" Width="120px" TextAlign="TextAlign.Left">
                            <Template Context="dlc">
                                <div style="white-space: normal; word-break: break-word; min-width: 0; max-height: 100px; overflow-y: auto;">
                                    @dlc.FileName
                                </div>
                            </Template>
                        </RadzenDataGridColumn>
                        <RadzenDataGridColumn Property="Size" Filterable="false" Title="Size" Width="30px" TextAlign="TextAlign.Center">
                            <Template Context="dlc">
                                @dlc.Size.ToHumanReadableBytes()
                            </Template>
                        </RadzenDataGridColumn>
                        <RadzenDataGridColumn Property="Version" Filterable="false" Title="Version" Width="30px" TextAlign="TextAlign.Center"/>
                        <RadzenDataGridColumn Property="Owned" Filterable="true" Title="Owned" Width="30px" TextAlign="TextAlign.Center" SortOrder="SortOrder.Descending" FormatString="{0}" FormatProvider="@_myBooleanProvider"/>
                    </Columns>
                </RadzenDataGrid>
            </RadzenTabsItem>
            <RadzenTabsItem Text="Updates">
                <RadzenDataGrid style="height: 50vh" @ref="_updatesGrid" IsLoading="@_updatesIsLoading" Count="@_updatesCount"
                                Data="@_updates" LoadData="@LoadUpdateData" AllowSorting="true" AllowColumnResize="true"
                                AllowFiltering="true" FilterMode="FilterMode.CheckBoxList" AllowPaging="true" PageSize="100"
                                ShowPagingSummary="true">
                    <Columns>
                        <RadzenDataGridColumn Property="ApplicationId" Filterable="true" Title="ID" Width="60px" TextAlign="TextAlign.Center" FilterMode="FilterMode.Advanced"/>
                        <RadzenDataGridColumn Property="FileName" Filterable="false" Title="File Name" Width="120px" TextAlign="TextAlign.Left">
                            <Template Context="updateDto">
                                <div style="white-space: normal; word-break: break-word; min-width: 0; max-height: 100px; overflow-y: auto;">
                                    @updateDto.FileName
                                </div>
                            </Template>
                        </RadzenDataGridColumn>
                        <RadzenDataGridColumn Property="Size" Filterable="false" Title="Size" Width="30px" TextAlign="TextAlign.Center">
                            <Template Context="updateDto">
                                @updateDto.Size.ToHumanReadableBytes()
                            </Template>
                        </RadzenDataGridColumn>
                        <RadzenDataGridColumn Property="Date" Filterable="false" Title="Date" Width="30px" TextAlign="TextAlign.Center"/>
                        <RadzenDataGridColumn Property="Version" Filterable="false" Title="Version" Width="30px" SortOrder="SortOrder.Descending" TextAlign="TextAlign.Center"/>
                        <RadzenDataGridColumn Property="ShortVersion" Filterable="false" Title="Short Version" Width="30px" SortOrder="SortOrder.Descending" TextAlign="TextAlign.Center"/>
                        <RadzenDataGridColumn Property="Owned" Filterable="true" Title="Owned" Width="30px" TextAlign="TextAlign.Center"  FormatString="{0}" FormatProvider="@_myBooleanProvider"/>

                    </Columns>
                </RadzenDataGrid>
            </RadzenTabsItem>
        </Tabs>
    </RadzenTabs>
</RadzenRow>